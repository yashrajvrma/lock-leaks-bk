generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

enum Billed {
  MONTHLY
  YEARLY
}

enum PricingName {
  FREE
  STARTER
  PRO
  STAR
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id String @id @default(uuid())

  email    String @unique
  password String @db.VarChar(255)

  priceId String  @unique
  price   Pricing @relation(fields: [priceId], references: [id])

  platformId String
  platform   Platform @relation(fields: [platformId], references: [id])
}

model Pricing {
  id     String      @id @default(uuid())
  name   PricingName
  billed Billed
  price  Int
  User   User[]
}

model Platform {
  id                    String  @id @default(uuid())
  platform              String
  username              String
  contactWhatsappNumber String?
  contactPhoneNumber    String?
  contactLiveChat       String?
  contactEmail          String?
  User                  User[]
}
